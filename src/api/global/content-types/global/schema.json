{
  "kind": "singleType",
  "collectionName": "globals",
  "info": {
    "singularName": "global",
    "pluralName": "globals",
    "displayName": "Global"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "siteTitle": {
      "type": "string",
      "required": true,
      "default": "site"
    },
    "favicon": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "domain": {
      "type": "string",
      "regex": "^([a-z0-9_]+\\.){1,}([a-z0-9]{1,6})$"
    }
  }
}
